{
  "manifest_version": 3,
  "name": "Open Tab Blocker",
  "version": "1.0.4",
  "description": "Block distracting websites by organizing them into time-controlled buckets",
  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "activeTab",
    "alarms"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
